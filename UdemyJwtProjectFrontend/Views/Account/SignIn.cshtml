@model AppUserLogin

<form asp-controller="Account" asp-action="SignIn" method="post" class="w-50 mx-auto mt-5 p-3 shadow">

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="text-danger" asp-validation-summary="ModelOnly">

    </div>

    <button type="submit" class="btn btn-primary btn-sm">Giriş Yap</button>

    <a asp-controller="Account" asp-action="SignUp" class="btn btn-link btn-sm float-right">Kayıt Ol</a>

</form>